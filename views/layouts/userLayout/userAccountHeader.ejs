            <script>
           document.addEventListener('DOMContentLoaded', function() {
    // Get all menu items
    var menuItems = document.querySelectorAll('.menu-item');

    // Function to set active item
    function setActiveItem(item) {
        // Remove 'active' class from all menu items
        menuItems.forEach(function(innerItem) {
            innerItem.classList.remove('active');
        });

        // Add 'active' class only to the clicked menu item
        item.classList.add('active');

        // Store the active menu item in localStorage
        localStorage.setItem('activeMenuItem', item.querySelector('a').getAttribute('href'));
    }

    // Add click event listener to each menu item
    menuItems.forEach(function(item) {
        item.addEventListener('click', function() {
            setActiveItem(item);
        });
    });

    // Check if there's a stored active menu item
    var storedActiveItem = localStorage.getItem('activeMenuItem');
    if (storedActiveItem) {
        // Find the corresponding menu item and set it as active
        var correspondingItem = document.querySelector('.menu-item a[href="' + storedActiveItem + '"]');
        if (correspondingItem) {
            setActiveItem(correspondingItem.parentElement);
        } else {
            // Clear localStorage if the stored active item is not found
            localStorage.removeItem('activeMenuItem');
        }
    }
});
