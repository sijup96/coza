        "name": "Gaurav Kumar",
        "email": "gaurav.kumar@example.com",
        "contact": "9000090000"
    },
    "notes": {
        "address": "Razorpay Corporate Office"
    },
    "theme": {
        "color": "#3399cc"
    }
};
var rzp1 = new Razorpay(options);
rzp1.open();
		}
        function verifyPayment(payment,order){
			$.ajax({
				url:'/order/verifyPayment',
                method:'POST',
				data:{
					payment,
					order
				},
                success:function(response){
                    if(response.success){
                        window.location.reload()
                    }
                }
				
			})
		}

    </script>

</body>
</html>