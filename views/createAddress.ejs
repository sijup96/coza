<%- include('./layouts/userLayout/userAccountHeader.ejs') %>
<section class="content-main">
    <div class="row">
        <div class="col-6">
            <div class="content-header">
                <h2 class="content-title">Add New Address</h2>
                <form action="/user/createAddress" method="post" enctype="multipart/form-data">
                    <p style="color:red">
                        <%= messages.head ? messages.head : '' %>
                    </p>
                    <div>
                        <button class="btn btn-md rounded font-sm hover-up">Submit</button>
                    </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <h6>1. General info</h6>
                        </div>
                        <div class="col-md-9">
                            <div class="mb-4">
                                <label class="form-label">Full Name</label>
                                <input type="text" placeholder="Type here" class="form-control" name="name"
                                    id="name" required>
                                <p style="color:red" id="nameError"></p>
                            </div>

                            <div class="mb-4">
                                <label class="form-label">Phone</label>
                                <textarea placeholder="Type here" class="form-control" rows="4" name="mobile"
                                    id="mobile" required></textarea>
                                <p style="color:red" id="mobile"></p>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">House Name</label>
                                <input type="text" placeholder="Type here" class="form-control" name="houseName"
                                    id="houseName" required>
                                <p style="color:red" id="houseNameError"></p>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Street Name</label>
                                <input type="text" placeholder="Type here" class="form-control" name="street"
                                    id="street" required>
                                <p style="color:red" id="streetError"></p>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Landmark</label>
                                <input type="text" placeholder="Type here" class="form-control" name="landmark"
                                    id="landmark" required>
                                <p style="color:red" id="landmarkError"></p>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">City</label>
                                <input type="text" placeholder="Type here" class="form-control" name="city"
                                    id="city" required>
                                <p style="color:red" id="cityError"></p>
                            </div>
                            <hr class="mb-4 mt-0">
                            <div class="row">
                                <div class="col-md-9">
                                    <div class="mb-4">
                                        <label class="form-label">Pincode</label>
                                        <input type="number" placeholder="â‚¹" class="form-control" name="pincode"
                                            pattern="\d+(\.\d{1,2})?" id="productPrice" required>
                                        <p style="color:red">
                                            <%= messages.pincode ? messages.pincode : '' %>
                                        </p>
                                    </div>
                                </div> <!-- col.// -->
                            </div> <!-- row.// -->
                           <hr class="mb-4 mt-0">
                         
                                </form>
                            </div> <!-- .row end// -->

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2" style="display: flex; text-align: end;">
            <div class="card card-product-grid ">
                <div class="info-wrap " style="display: flex; text-align: end;">
                    <div class="gallery "></div>
                    <!-- Button to delete selected images -->

                </div>
            </div>
            <!-- card-product  end// -->
        </div>
</section> <!-- content-main end// -->


<%- include('./layouts/userLayout/userAccountFooter.ejs') %>