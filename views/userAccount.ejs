<script>
    function changePassword() {
        let currentPassword = document.getElementById('currentPassword').value;
        let newPassword = document.getElementById('newPassword').value;
        let confirmPassword = document.getElementById('confirmPassword').value;

        if(newPassword !== confirmPassword){
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'New password and confirm password do not match.',
            });
            return;
    }else{
fetch('/changePassword',{
    method:'PUT',
    headers:{
        'Content-Type': 'application/json',
    },
    body:JSON.stringify({
        currentPassword:currentPassword,
        newPassword:newPassword,
    }),
})
.then(response =>{
    if(response.ok){
Swal.fire({
    icon:'success',
    title:'Success',
    text:'Password changed Successfully'
});
$('#changePasswordModal').modal('hide');
    }else{
Swal.fire({
    icon:'error',
    title:'error',
    text:'Enter password correctly'
}) 
   }
})
    }
    }
</script>

    <script>
        function changeProfilePhoto(photoUrl) {
            document.getElementById('mainAvatar').src = photoUrl;

            // Send AJAX request to update the database
            fetch('/user/profileIcon', {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ photoUrl }),
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    // Handle success, if needed
                    console.log(data);
                })
                .catch(error => {
                    // Handle error
                    console.error('There was a problem with the fetch operation:', error);
                });
        }
    </script>

<script>
    $(document).ready(function() {
        $('#deactivate').click(function() {
            Swal.fire({
                title: 'Are you sure?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, deactivate!'
            }).then((result) => {
                if (result.isConfirmed) {
                    // User confirmed, make AJAX request
                    $.ajax({
                        url: '/deactivate',
                        type: 'DELETE',
                        dataType: 'json',
                        success: function(response) {
                            // Handle success response if needed
                            Swal.fire('Deactivated!', 'Your account has been deactivated.', 'success');
                        },
                        error: function(xhr, status, error) {
                            // Handle error response if needed
                            Swal.fire('Error!', 'Failed to deactivate your account.', 'error');
                        }
                    });
                }
            });
        });
    });
</script>
